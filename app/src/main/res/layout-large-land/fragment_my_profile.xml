<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_change_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="ChangePwd_onClick"
            android:text="@string/change_pwd"
            android:textColor="#0AA4E6"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_account_no_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/account_no"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_account_no_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_name_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_balance_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/balance"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_balance_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/f_my_profile_name_key"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_phone_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/mobile_no"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_phone_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_email_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/email_id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_email_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_country_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/country"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_country_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line6"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_activation_date_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/active_from"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_activation_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line7"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/f_my_profile_serial_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/serialno"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_profile_serial_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line8"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#C3C1C2" />

</LinearLayout>