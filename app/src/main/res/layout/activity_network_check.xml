<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="#fff3f3f3"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/loginHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:id="@+id/a_nk_chk_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/a_nk_chk_img"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="24dip"
                android:contentDescription=""
                android:src="@drawable/ic_logo_confirm_dialog" />

            <TextView
                android:id="@+id/a_nk_chk_headerLabel"
                style="@style/header_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/a_nk_chk_headerLineLayout"
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/a_nk_chk_ll"
            android:layout_marginTop="16dip"
            android:background="@color/orange"
            android:orientation="vertical" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/loginFormBody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginHeader"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip" >

        <TextView
            android:id="@+id/InfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A problem occured while communicating with the server. Please check your internet connection."
            android:textColor="#aa000000"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginFormBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="62dip"
        android:layout_below="@+id/loginFormBody"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription=""
            android:src="@drawable/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="2.0" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_margin="5.0dip"
                    android:background="#00000000"
                    android:gravity="center"
                    android:minWidth="175.0dip"
                    android:text="Back"
                    android:textColor="#aa000000"
                    android:textSize="14.0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="2.0dip"
                android:layout_height="fill_parent"
                android:background="#22797979" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/okBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_margin="5.0dip"
                    android:background="#00000000"
                    android:gravity="center"
                    android:minWidth="175.0dip"
                    android:text=""
                    android:textColor="#aa000000"
                    android:textSize="14.0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>