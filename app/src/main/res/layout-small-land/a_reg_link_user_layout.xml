<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/img_bg_reg_forum"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/a_reg_tv_user_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="12dp"
        android:text="@string/reg_link_user"
        android:textColor="#5A5A5A"
        android:textSize="12sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/a_reg_et_link_user_email_id"
        android:layout_width="220dp"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="@drawable/img_et_reg"
        android:ems="10"
        android:hint="@string/email_id"
        android:inputType="textEmailAddress"
        android:paddingLeft="12dp"
        android:textSize="9sp" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="5dp" >

        <Button
            android:id="@+id/a_reg_btn_cancel"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_cancel"
            android:onClick="btnCancel_onClick" />

        <Button
            android:id="@+id/a_reg_btn_submit"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_submit"
            android:onClick="btnLinkUser_onClick" />
    </LinearLayout>

    <TextView
        android:id="@+id/a_reg_tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="textLogin_onClick"
        android:text="@string/reg_existing_user"
        android:textColor="#0AA4E6"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/a_reg_tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/reg_note"
        android:textColor="#5A5A5A"
        android:textSize="10sp" />

</LinearLayout>